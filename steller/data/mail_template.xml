                                        ${company.phone}
                                        <br/><br/>
                                    </td>
                                </tr>
                                <!-- FOOTER -->
                                <tr>
                                    <td align="center" style="min-width: 590px; background-color: #fec470; color: #0c2a56; font-weight: bold;" colspan="2">
                                        <table border="0" cellpadding="0" cellspacing="0" width="590" style="min-width: 590px; font-size: 16px; padding: 12px; border-collapse:separate;">
                                            <tr>
                                                <td valign="middle" align="center" colspan="2">
                                                    Connect with Us <br/><br/>
                                                </td>
                                            </tr>
                                            <tr>
                                                <td valign="middle" align="center" style="width: 50%; color: #0c2a56;">
                                                    % if company.email
                                                        <img width="23" src="/web/image/stellar.icon-telephone" class="img-responsive" /> ${company.phone}
                                                    % endif
                                                </td>
                                                <td valign="middle" style='width: 50%; text-align: center;' rowspan="2">
                                                    % if company.partner_id
                                                        % set contact = company.partner_id
                                                        % set address = contact.contact_address.replace(contact.name,'')
                                                        <img width="23" src="/web/image/stellar.icon-placeholder" class="img-responsive" /> ${address}
                                                    % endif
                                                </td>
                                            </tr>
                                            <tr>
                                                <td valign="middle" align="center" style="color: #0c2a56; width: 50%;">
                                                % if company.email
                                                    <img width="23" src="/web/image/stellar.icon-message" class="img-responsive" /> <a href="mailto:${company.email}" style="text-decoration:none; color: #0c2a56;">${company.email}</a>
                                                % endif
                                                </td>
                                            </tr>
                                        </table>
                                    </td>
                                </tr>
                            </tbody>
                        </table>
                    </td>
                </tr>
            </table>
        </field>
        <field name="report_template" ref="sale.action_report_saleorder"/>
        <field name="report_name">${(object.name or '').replace('/','_')}</field>
        <field name="lang">${object.partner_id.lang}</field>
        <field name="user_signature" eval="False"/>
        <field name="auto_delete" eval="False"/>
    </record>

</odoo>
