<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="view_order_form_send_confirmation_email" model="ir.ui.view">
        <field name="name">sale.order.form.send.confirmation.email</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form"/>
        <field name="arch" type="xml">
            <xpath expr="//button[@name='action_confirm'][2]" position="attributes">
                <attribute name="class">send_confirmation_email</attribute>
            </xpath>
        </field>
    </record>

</odoo>
