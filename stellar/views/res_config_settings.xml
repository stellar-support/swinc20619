<?xml version="1.0"?>
<odoo>

    <record id="res_config_settings_view_form_sale_confirmation_email" model="ir.ui.view">
        <field name="name">res.config.settings.view.form.sale.confirmation.email</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="base.res_config_settings_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//div[@id='sale_config_online_confirmation_sign']" position="after">
                <div class="col-12 col-lg-6 o_setting_box" id="sale_confirmation_email">
                    <div class="o_setting_left_pane">
                        <field name="send_sale_confirmation_email"/>
                    </div>
                    <div class="o_setting_right_pane">
                        <span class="o_form_label">Sent sale confirmation email</span>
                        <div class="text-muted">
                            When this option is enable an email is sent when a Sale Order is confirm.
                        </div>
                        <div class="content-group" attrs="{'invisible': [('group_sale_order_template', '=', False)]}">
                            <div class="mt16">
                                <label for="sale_order_confirmation_email_ids" class="o_light_label"/>
                                <field name="sale_order_confirmation_email_ids" widget="many2many_tags_email" class="oe_inline"/>
                            </div>
                        </div>
                    </div>
                </div>
            </xpath>
        </field>
    </record>

</odoo>
